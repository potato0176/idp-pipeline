# === Application Settings ===
APP_NAME=IDP-Pipeline
APP_ENV=development
DEBUG=true

# === Server ===
HOST=0.0.0.0
PORT=8000

# === VLM Settings (Gemma 3 27b via Ollama) ===
VLM_API_BASE=http://localhost:11434/v1
VLM_MODEL=gemma3:27b
VLM_TIMEOUT=120

# === OCR Settings ===
OCR_LANGUAGES=ch_tra,en
OCR_GPU=true

# === Vector Database ===
CHROMA_PERSIST_DIR=./data/chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# === Chunking Settings ===
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# === File Storage ===
UPLOAD_DIR=./data/uploads
OUTPUT_DIR=./data/outputs
MAX_FILE_SIZE_MB=50
